{
  "manifest_version": 3,
  "name": "Read→Do Capture",
  "version": "0.1.0",
  "description": "Capture current page with intent into Read→Do.",
  "action": {
    "default_title": "Capture to Read→Do",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "tabs"],
  "host_permissions": ["http://localhost:8787/*"]
}
