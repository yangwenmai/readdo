{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://readdo.dev/schemas/export.schema.json",
    "title": "ReadDo Export Artifact (v1)",
    "type": "object",
    "additionalProperties": false,
    "required": ["files"],
    "properties": {
      "files": {
        "type": "array",
        "minItems": 1,
        "maxItems": 6,
        "items": {
          "type": "object",
          "additionalProperties": false,
          "required": ["type", "path"],
          "properties": {
            "type": { "type": "string", "enum": ["png", "md", "caption", "json"] },
            "path": {
              "type": "string",
              "description": "Local filesystem path or a future blob reference.",
              "minLength": 1,
              "maxLength": 400
            },
            "created_at": { "type": "string", "format": "date-time" }
          }
        }
      },
      "export_key": {
        "type": "string",
        "description": "Idempotency key for export generation.",
        "minLength": 0,
        "maxLength": 128
      },
      "card_version": {
        "type": "integer",
        "minimum": 1,
        "description": "Selected card artifact version used for this export."
      },
      "renderer": {
        "type": "object",
        "additionalProperties": false,
        "required": [],
        "properties": {
          "name": { "type": "string", "minLength": 0, "maxLength": 64 },
          "version": { "type": "string", "minLength": 0, "maxLength": 32 }
        }
      }
    }
  }
  